---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Katex from '../../components/Math.astro';
---

<BaseLayout pageTitle="upnt - Math">
	<Fragment slot="title">
		研究について
	</Fragment>
	<Fragment slot="main">
		<section class="max-w-3xl mx-auto px-4 py-8">
			<p class="text-gray-600 mb-6">
				このページでは研究に関する雑多な記事を紹介します
			</p>
			<ul>
				<li>
					<a
						href={`${import.meta.env.BASE_URL}/math/page1`}
						class="block p-6 bg-white border border-gray-300 rounded-xl shadow-sm hover:shadow-md hover:border-gray-500 transition"
					>
						<h2 class="text-xl font-semibold text-gray-800 mb-2">QUBOとは</h2>
						<p class="text-gray-600 text-sm">
							量子アニーリングに用いられる QUBO モデルの概要とその応用
						</p>
					</a>
				</li>
			</ul>
		</section>
	</Fragment>
</BaseLayout>
