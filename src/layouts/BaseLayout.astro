---
import "../styles/global.css"
import { profile } from "../data/profile"

const { pageTitle } = Astro.props;
const faviconUri = `${import.meta.env.BASE_URL}/favicon.ico`;
const homeUri = `${import.meta.env.BASE_URL}`;
const mathUri = `${import.meta.env.BASE_URL}/math`;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href={ faviconUri } />
		<title>{ pageTitle }</title>
	</head>
	<body class="bg-white text-gray-900 font-sans">
		<header class="bg-gray-100 py-4 px-6 shadow flex justify-between items-center">
			<h1 class="text-xl fond-bold"><slot name="title"></h1>
			<nav>
				<ul class="flex gap-4 text-base">
					<li><a href={homeUri} class="hover:underline">ホーム</a></li>
					<li><a href={mathUri} class="hover:underline">研究について</a></li>
				</ul>
			</nav>
		</header>
		<main class="max-w-3xl mx-auto p-6">
			<slot name="main" />
		</main>
		<footer class="text-sm text-gray-600 text-center py-4 border-t mt-10">
			&copy; 2025 {profile.name} | 
			<a
				class="text-blue-600 hover:underline"
				href={`https://github.com/${profile.github}`}
				target="_blank"
				rel="noopener noreferrer"
			>
				Github
			</a>
		</footer>
	</body>
</html>

