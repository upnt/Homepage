---
import katex from 'katex';
import 'katex/dist/katex.min.css';

interface Props {
  expression: string;
  display?: boolean;
}

const { expression, display = false } = Astro.props;

const html = katex.renderToString(expression, {
  displayMode: display,
  throwOnError: false,
});
---

<div set:html={html} />
